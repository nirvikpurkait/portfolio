// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Icon {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  link         String
  special      Boolean @default(false)
  icon_details String?
  key          String
}

model ToolsTechnologies {
  id      String  @id @default(auto()) @map("_id") @db.ObjectId
  skill   String
  special Boolean @default(false)
}

model Education {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  course        String
  institute     String
  yearOfPassing Int
  percentage    Float?
  GPA           Float?
  special       Boolean? @default(false)
  data          String?
}

model Rating {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  email     String    @unique
  rating    Int
  createdAt DateTime? @default(now())
  updatedAt DateTime?
}

model ContactMessage {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  email     String
  name      String
  message   String
  createdAt DateTime? @default(now())
}
